<%= form_for(@idea) do |f| %>
  <% if @idea.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@idea.errors.count, "error") %> prohibited this idea from being saved:</h2>

      <ul>
      <% @idea.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :title %><br>
    <%= f.text_field :title %>
  </div>
  <div class="field">
    <%= f.label :description %><br>
    <%= f.text_area :description %>
  </div>
  <div class="field">
    <%= f.label :industry %><br>
    <%= f.select :industry, options_for_select(["Health", "Technology", "Education", "Finance", "Travel"]), :class => 'form-control' %>
  </div>
  <div class="field">
    <%= f.label :keyword_list, "Tags (separated by commas)" %>
    <%= f.text_field :keyword_list %>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
