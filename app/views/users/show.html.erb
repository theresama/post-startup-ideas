<% provide(:title, @user.name) %>
<div class="row">
  <aside class="col-md-4">
    <section class="user_info">
      <h1>
        <%= @user.name %>
      </h1>
    </section>
  </aside>
  <div class="col-md-8">
    <% if @user.ideas.any? %>
      <h3>My Ideas (<%= @user.ideas.count %>)</h3>
      <ol class="ideas">
      	<% @user.ideas.each do |idea| %>
      		<p>Title: <%= idea.title %></p>
      		<p>Description: <%= idea.description %></p>
      		<p>Industry: <%= idea.industry %></p>
		<% end %>
      </ol>
    <% end %>
  </div>
</div>