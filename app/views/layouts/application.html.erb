<!DOCTYPE html>
<html>
<head>
	<title>StartIdeas</title>
	<%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
	<%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
	<%= csrf_meta_tags %>
	<!--[if lt IE 9]>
	    <script src="//cdnjs.cloudflare.com/ajax/libs/html5shiv/r29/html5.min.js">
	    </script>
	  <![endif]-->

	<%= favicon_link_tag 'favicon.ico' %>

	<meta charset="utf-8">
	<meta http-equiv="X-UA-Compatible" content="IE=edge">
	<meta name="viewport" content="width=device-width, initial-scale=1">
	<meta name="description" content="">
	<meta name="author" content="">
</head>
<body>

	<!-- Fixed navbar -->
    <nav class="navbar navbar-default navbar-fixed-top">
      <div class="container">
        <div class="navbar-header">
          <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#navbar" aria-expanded="false" aria-controls="navbar">
            <span class="sr-only">Toggle navigation</span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
          </button>
          <a class="navbar-brand" href="#">Project name</a>
        </div>
        <div id="navbar" class="navbar-collapse collapse">
          <ul class="nav navbar-nav">
            <li class=""><a href="/">Ideas</a></li>
            <li><a href="/ideas/new">New Idea</a></li>
            <li><a href="/ideas/graph">Trending</a></li>
            
          </ul>
          <ul class="nav navbar-nav navbar-right">
            <% if logged_in? %>
              <li>
                <%= link_to "My Ideas", current_user %>
              </li>
              <li>
                <%= link_to "Logout", logout_path, method: "delete" %>       
              </li>
            <% else %>
              <li>
                  <%= link_to "Login", login_path %>
              </li>
            <% end %>
          </ul>
        </div><!--/.nav-collapse -->
      </div>
    </nav>

	<div class="col-md-3 sidebar">

		<div class="sidebar-container ">

			<div class="logo text-center">
				<a href="/" ><i class="fa fa-lightbulb-o fa-5x"></i></a>
			</div>

			<hr></hr>

			<ul class="side-links">
				<li class="">
					<a href="/"><i class="fa fa-lightbulb-o fa-fw"></i> Ideas</a>
				</li>
				<li><a href="/ideas/new"><i class="fa fa-pencil-square-o fa-fw"></i> New Idea</a></li>
				<li><a href="/ideas/graph"><i class="fa fa-line-chart fa-fw"></i> Trending</a></li>
				<% if logged_in? %>
				  <li>
				  	<%= link_to(content_tag(:i,nil, class: 'fa fa-user fa-fw'), current_user) %>
				    <%= link_to "My Ideas", current_user %>
				  </li>
				  <li>
					<%= link_to(content_tag(:i,nil, class: 'fa fa-sign-out fa-fw'), current_user) %>
				    <%= link_to "Logout", logout_path, method: "delete" %>       
				  </li>
				<% else %>
				  <li>
				  	<%= link_to(content_tag(:i,nil, class: 'fa fa-sign-in fa-fw'), current_user) %>
				      <%= link_to "Login", login_path %>
				  </li>
				<% end %>
				
			</ul>

			<hr></hr>

			<div class="col-lg-10 col-lg-offset-1">
			    <form class="input-group input-group-sm" id="searchForm">
			      	<input type="text" class="form-control" placeholder="Search tags" id="query">
			      	<span class="input-group-btn">
			        	<button class="btn btn-default" type="button" id="search" value="test">Go!</button>
			      	</span>
			    </form><!-- /input-group -->
			</div><!-- /.col-lg-6 -->		

		</div>


	</div>
	<div class="col-md-9 col-md-offset-3 main">
		<div class="col-lg-12">
			<%= yield %>
		</div>
		
		<%= render 'layouts/footer' %>
	</div>

</body>
</html>




