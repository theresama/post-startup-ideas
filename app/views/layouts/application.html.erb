<!DOCTYPE html>
<html>
<head>
  <title>StartIdeas</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
  <!--[if lt IE 9]>
        <script src="//cdnjs.cloudflare.com/ajax/libs/html5shiv/r29/html5.min.js">
        </script>
      <![endif]-->
</head>
<body>

	<div class="col-md-3 sidebar">

		<div class="sidebar-container ">

			<div class="logo text-center">
				<i class="fa fa-lightbulb-o fa-5x"></i>
				<h1>Startup Ideas</h1>
			</div>

			<hr></hr>

			<ul class="side-links">
				<li class=""><a href="/">Home</a></li>
				<li><a href="/ideas">Ideas</a></li>
				<li><a href="/ideas/new">New Idea</a></li>
				<li><a href="/ideas/graph">Stats</a></li>
				<% if logged_in? %>
				  <li>
				    <%= link_to "My Ideas", current_user %>
				  </li>
				  <li>
				    <%= link_to "Logout", logout_path, method: "delete" %>       
				  </li>
				<% else %>
				  <li>
				      <%= link_to "Login", login_path %>
				  </li>
				<% end %>
				
			</ul>

			<div class="col-lg-12">
			    <form class="input-group" id="searchForm">
			      	<input type="text" class="form-control" placeholder="Search tags" id="query">
			      	<span class="input-group-btn">
			        	<button class="btn btn-default" type="button" id="search" value="test">Go!</button>
			      	</span>
			    </form><!-- /input-group -->
			</div><!-- /.col-lg-6 -->

			
		</div>


	</div>
	<div class="col-md-9 col-md-offset-3 main">
		<% flash.each do |message_type, message| %>
		  <div class="alert alert-<%= message_type %>"><%= message %></div>
		<% end %>
		<%= yield %>
		<%= render 'layouts/footer' %>
	</div>

</body>
</html>




